<div class="jumbotron" ng-app="app" ng-controller="BeerCtrl">
    @*{{model | json}}*@
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Colour</th>
                <th>Has Tried</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="beer in model">
                <td>{{beer.Name}}</td>
                <td>{{beer.Colour}}</td>
                @*<td>{{beer.HasTried}}</td>*@
                <td>
                    <input type="checkbox" ng-model="beer.HasTried" />
                </td>
            </tr>
            <tr ng-if="model.Beers.length==0">
                <td colspan="4" class="text-center">There are no beers to display</td>
            </tr>
            <tr ng-if="states.showBeerForm">
                <td>
                    <input type="text" class="form-control" placeholder="Name" ng-model="new.Beer.Name"/>
                </td>
                <td>
                    <input type="text" class="form-control" placeholder="Colour" ng-model="new.Beer.Colour"/>
                </td>
                <td>
                    <input type="checkbox" ng-model="new.Beer.HasTried"/>Have Tried
                </td>
                <td>
                    <button type="button" class="btn btn-primary ladda-button" ng-click="addNewBeer()" loading-button data-style="expand-left" spin="states.isAdding">Add</button>
                    <button type="button" class="btn btn-default" ng-click="showBeerForm(false)">Cancel</button>
                </td>
            </tr>
            <tr>
                <td colspan="4">{{new.Beer}}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary" ng-click="showBeerForm(true)">Add Beer</a>
</div>